{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "WriteBuildArtifactBucket",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:ListBucket",
                "s3:CreateBucket",
                "s3:PutObject",
                "s3:PutBucketVersioning",
                "s3:PutBucketPublicAccessBlock"
            ],
            "Resource": [
                "arn:aws:s3:::dls-asgard-thor-cf-lambda-code",
                "arn:aws:s3:::dls-asgard-thor-cf-lambda-code/*",
                "arn:aws:s3:::cup-central-ges-sam",
                "arn:aws:s3:::cup-central-ges-sam/*",
                "arn:aws:s3:::cup-central-build-artifacts",
                "arn:aws:s3:::cup-central-build-artifacts/*"
            ]
        },
        {
            "Sid": "CreateCFStack",
            "Effect": "Allow",
            "Action": [
                "cloudformation:CreateStack",
                "cloudformation:UpdateStack",
                "cloudformation:DeleteStack",
                "cloudformation:DescribeStacks"
            ],
            "Resource": [
                "arn:aws:cloudformation:*:*:stack/cup-central-*-ges-cf/*"
            ]
        },
        {
            "Sid": "CreateCFBucket",
            "Effect": "Allow",
            "Action": [
                "cloudformation:CreateUploadBucket"
            ],
            "Resource": "*"
        },
        {
            "Sid": "ReadWriteCodePipeline",
            "Effect": "Allow",
            "Action": [
                "codepipeline:CreatePipeline",
                "codepipeline:GetPipeline",
                "codepipeline:GetPipelineState",
                "codepipeline:DisableStageTransition",
                "codepipeline:UpdatePipeline",
                "codepipeline:DeletePipeline"
            ],
            "Resource": [
                "arn:aws:codepipeline:*:*:cup-central-*-ges-cp",
                "arn:aws:codepipeline:*:*:cup-central-*-ges-cp/*"
            ]
        },
        {
            "Sid": "CreateCodeBuildProject",
            "Effect": "Allow",
            "Action": [
                "codebuild:CreateProject",
                "codebuild:UpdateProject",
                "codebuild:DeleteProject"
            ],
            "Resource": [
                "arn:aws:codebuild:*:*:project/cup-central-*-ges-cb"
            ]
        },
        {
            "Sid": "ReadIAMRolePolicy",
            "Effect": "Allow",
            "Action": [
                "iam:ListPolicies",
                "iam:GetRole",
                "iam:ListRoles",
                "iam:ListAttachedRolePolicies",
                "iam:GetRolePolicy"
            ],
            "Resource": "*"
        },
        {
            "Sid": "WriteIAMRolePolicy",
            "Effect": "Allow",
            "Action": [
                "iam:CreateRole",
                "iam:CreatePolicy",
                "iam:CreateInstanceProfile",
                "iam:UpdateAssumeRolePolicy",
                "iam:AttachRolePolicy",
                "iam:PutRolePolicy",
                "iam:AddRoleToInstanceProfile",
                "iam:PassRole",
                "iam:DeleteRolePolicy",
                "iam:DeleteRole"
            ],
            "Resource": [
                "arn:aws:iam::*:instance-profile/cup-central-*-ges-*",
                "arn:aws:iam::*:policy/cup-central-*-ges-*",
                "arn:aws:iam::*:role/cup-central-*-ges-*"
            ]
        }
    ]
}